<!DOCTYPE html>
<html>
  <head>
    <title>PetShelter2006</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar">
      <%= link_to("Home", "/") %>
      <%= link_to("Pet Index", "/pets") %>
      <%= link_to("Shelter Index", "/shelters") %>
    </nav>

    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
