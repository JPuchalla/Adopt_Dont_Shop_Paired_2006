<h1>All Pets</h1>

<section class = "pets">
  <h1>All Pets</h1>
  <% @pets.each do |pet| %>
    <section id='pet-<%=pet.id%>'>
      <p><%= image_tag(pet.image) %></p>
      <h3><%= pet.name %></h3>
      <p>Age: <%= pet.age %></p>
      <p>Sex: <%= pet.sex %></p>
      <p>Shelter: <%= pet.shelter.name %></p>
      <p><%= link_to "Edit Pet Info", "/pets/#{pet.id}/edit" %></p><br>
      <p><%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %></p><br><br>
    </section>
  <% end %>
</section>
