<h1>Favorite Pets</h1>

  <% favorites.favorite_pets.each do |pet| %>
  <section id="favorites-#{pet.id}">
    <%= image_tag pet.image, width: 300 %>
    <h3>Name: <%= link_to(pet.name, "/pets/#{pet.id}") %></h3>
    <p><%= button_to "Remove From Favorites", "/favorites/#{pet.id}", method: :delete %></p>
  </section>
  <% end %>
